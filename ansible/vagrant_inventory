[vagrant]
ci2.dawg.eu ansible_ssh_host=172.16.1.2

[container_hosts]
ci2.dawg.eu

# group with all containers
[containers:children]
ci2_containers

[ci2_containers]
jenkins
runner-01
runner-02

[ci2_containers:vars]
# ssh proxy into container (running ssh itself)
ansible_ssh_common_args=-o ProxyCommand="ssh -o IdentityFile=.vagrant/machines/ci/virtualbox/private_key -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null -W %h:%p vagrant@172.16.1.2" -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null
ansible_ssh_user=root
