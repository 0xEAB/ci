#!/bin/env groovy

////////////////////////////////////////////////////////////////////////////////

def projects = [ "s-ludwig/taggedalgebraic", "repeatedly/mustache-d" ]

stage('Get compiler') {
    sh "Fetch/unpack artifacts"
}

stage('Clone') {
    def repos = [:]

    projects.each {
        repos[${it}] = {
            dir(${it}) {
                checkout poll: false, scm: [$class: 'GitSCM', branches: [[name: '*/master']], extensions: [[$class: 'CleanBeforeCheckout']], userRemoteConfigs: [[url: 'https://github.com/dlang/${it}.git']]]
            }
        }
    }

    node {
        parallel repos
    }
}
